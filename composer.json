{
  "name": "torugo/router",
  "type": "library",
  "description": "Simple route system using PHP Attributes",
  "keywords": [
    "router",
    "controllers",
    "requests",
    "attributes"
  ],
  "license": "MIT",
  "homepage": "https://github.com/vitor-hugo/router",
  "authors": [
    {
      "name": "Vitor Hugo",
      "role": "developer"
    }
  ],
  "require": {
    "php": ">=8.2",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.1.3"
  },
  "autoload": {
    "psr-4": {
      "Torugo\\Router\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Router\\": "tests/"
    }
  }
}
